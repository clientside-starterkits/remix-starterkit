{
  "type": "module",
  "name": "bookmark-landing-page",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "reveal": "remix reveal",
    "clean": "rm -rf build",
    "build": "npm run clean && remix vite:build && npm run build:server",
    "build:server": "tsc server/main.ts --outDir build --esModuleInterop --module NodeNext",
    "lint": "biome lint --error-on-warnings ./app ./server",
    "format": "biome format --write ./app ./server",
    "dev": "node build/main.js",
    "dev:debug": "node --inspect build/main.js",
    "start": "cross-env NODE_ENV=production node build/main.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@remix-run/express": "^2.10.3",
    "@remix-run/node": "^2.10.3",
    "@remix-run/react": "^2.10.3",
    "express": "^4.19.2",
    "isbot": "^4.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@remix-run/dev": "^2.10.3",
    "@types/express": "^4.17.21",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.40",
